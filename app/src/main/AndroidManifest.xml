<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.t14.gametrader" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FriendsListActivity"
            android:label="@string/title_activity_friends_list"
            android:theme="@style/ListFont" >
        </activity>
        <activity
            android:name=".InventoryListActivity"
            android:label="@string/title_activity_inventory_list"
            android:theme="@style/ListFont" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".InventoryItemActivity"
            android:label="@string/title_activity_inventory_item" >
        </activity>
        <activity
            android:name=".EditInventoryItemActivity"
            android:label="@string/title_activity_edit_inventory_item" >
        </activity>
        <activity
            android:name=".SearchPageActivity"
            android:label="@string/title_activity_search_page" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name=".TradeHistoryActivity"
            android:label="@string/title_activity_trade_history" >
        </activity>
        <activity
            android:name=".TradeActivity"
            android:label="@string/title_activity_trade" >
        </activity>
        <activity
            android:name=".InventoryItemPictureViewer"
            android:label="@string/title_activity_item_picture_viewer" >
        </activity>
    </application>

</manifest>
